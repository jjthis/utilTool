<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="로드">
        <Preference
            android:key="load"
            android:summary="저장소에서 텍스트를 불러옵니다"
            android:title="불러오기" />
    </PreferenceCategory>
    <PreferenceCategory android:title="설정">
        <SwitchPreference
            android:defaultValue="false"
            android:key="auto"
            android:summary="자동으로 이어서 동작합니다"
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="자동 이어쓰기" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="clearButton"
            android:summaryOff="지우기 버튼을 사용하지 않습니다"
            android:summaryOn="지우기 버튼을 사용합니다"
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="지우기 버튼 사용하기" />
    </PreferenceCategory>

    <PreferenceCategory android:title="어플 정보">
        <Preference
            android:key="info"
            android:summary="개발자 정보를 확인합니다"
            android:title="개발자 정보">
            <intent
                android:targetClass="replace.text.com.replaceregexp.madeBy"
                android:targetPackage="replace.text.com.replaceregexp" />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>